{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    // https://www.typescriptlang.org/docs/handbook/module-resolution.html#node
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react",
    
    "resolveJsonModule": true,
    // "esModuleInterop": true,
    // "moduleResolution": "node",
    // "strict": true,
    // "jsx": "react",
    "noEmit": true,
    "module": "es2015",
  },
  "exclude": ["node_modules"]
}
