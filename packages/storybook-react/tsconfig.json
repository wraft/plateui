{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": false,
    "declarationMap": false,
    "jsx": "react",
    "noEmit": false,
    "paths": {
      "@functionary/ui-react": ["../ui-react/src"],
      "@functionary/ui-react/*": ["../ui-react/src/*"]
    },
    "resolveJsonModule": true,
    "rootDirs": [".storybook", "src"]
  },
  "include": [".storybook", "src"],
  "exclude": [
    "**/*.stories.{jsx,tsx,mdx}"
  ]
}
